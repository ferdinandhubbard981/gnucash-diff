{
	"version": "2.0.0",
	"tasks": 
	[
		{
			"label": "build",
			"command": "dotnet",
			"type": "process",
			"args": [
			"build"
			],
			"problemMatcher": "$msCompile",
			"group": {
			"kind": "build",
			"isDefault": true
			}
		},
		{ 
            "label": ".NET Core Test with debugger", 
            "type": "process", 
            "isBackground": true, 
            "command": "dotnet", 
            "args": [ "test" ], 
            "options": 
                { 
                    "cwd": "${workspaceFolder}/diff.Tests", 
                    "env": 
                    { 
                        "VSTEST_HOST_DEBUG": "1" 
                    }, 
                }, 
            "group": "test", "presentation": 
                { 
                    "echo": true,
                    "reveal": "always",
                    "focus": false,
                    "panel": "shared"
                },
            "problemMatcher": [] 
        },
	
	]
}
  